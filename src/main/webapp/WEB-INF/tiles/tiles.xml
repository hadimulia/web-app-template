<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<tiles-definitions>
    <!-- Login page - standalone layout -->
    <definition name="login" template="/WEB-INF/views/login.jsp">
        <put-attribute name="title" value="My Application"/>
        <put-attribute name="body" value=""/>
    </definition>
    
    <!-- Base Layout -->
    <definition name="baseLayout" template="/WEB-INF/views/layout/main.jsp">
        <put-attribute name="title" value="My Application"/>
        <put-attribute name="body" value=""/>
    </definition>
    
    <!-- Dashboard -->
    <definition name="dashboard" extends="baseLayout">
        <put-attribute name="title" value="Dashboard"/>
        <put-attribute name="body" value="/WEB-INF/views/dashboard.jsp"/>
    </definition>

    <!-- Two-level path fallback -->
    <definition name="*/*" extends="baseLayout">
        <put-attribute name="body" value="/WEB-INF/views/{1}/{2}.jsp"/>
    </definition>

</tiles-definitions>